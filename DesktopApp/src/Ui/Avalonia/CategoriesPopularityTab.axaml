<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DesktopApp.Ui.Avalonia.CategoriesPopularityTab">
    <Grid RowDefinitions="* 50" ColumnDefinitions="*">
        <DataGrid Name="CategoriesDataGrid" AutoGenerateColumns="True" />
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Name="ExportJson" Click="ExportJson_OnClick">Export to JSON</Button>
            <Button Name="ExportXml" Click="ExportXml_OnClick">Export to XML</Button>
            <Button Name="ExportSql" Click="ExportSql_OnClick">Export to SQL</Button>
            <Button Name="ImportCategories" Click="ImportCategories_OnClick">Import categories definitions</Button>
            <Button Name="Update" Click="Update_OnClick">Update</Button>
        </StackPanel>
    </Grid>
</UserControl>
